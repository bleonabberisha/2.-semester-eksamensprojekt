---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/Hero.astro";
import Carousel from "../components/Carousel.astro";

const products = [
  { title: "RIMINI BLAZER SKIRT 01", price: "595,00 kr.", image: "./gallery/ss_8.webp" },
  { title: "WORK BAG 02", price: "995,00 kr.", image: "./gallery/work-bag_9.webp" },
  { title: "SS TOP 03", price: "395,00 kr.", image: "./gallery/ss_8.webp" },
];
---

<MainLayout>
  <Hero />

  <!-- Grid layout for text and carousel -->
  <div class="grid1_1">
    <!-- Left Column for Text -->
    <div class="left-column">
      <h1>OUR CONCEPT</h1>
      <p>All Solrig's designs are created with consideration and sustainability in focus. Pass on this thoughtfulness with carefully selected gifts for both the home and the wardrobe. Explore our gift shop and find inspiration for thoughtful choices.</p>
    </div>
    
    <!-- Right Column for Carousel -->
    <div class="right-column">
      <Carousel products={products} />
    </div>
  </div>

  <h2 class="citat">“We give discarded clothes new life”</h2>
  <img class="langtBillede" src="./gallery/langt_billede.webp" alt="LangtBillede" />
</MainLayout>

<style>
  .citat {
    margin-top: 100px;
    text-align: center;
  }

  .langtBillede {
    margin-top: 100px;
    max-width: 100%;
    height: auto;
  }

  /* Grid setup */
  .grid1_1 {
    display: grid;
    grid-template-columns: 1fr 1fr; /* Equal width columns */
    gap: 50px; /* Space between columns */
    align-items: start; /* Ensures both items align at the top */
    margin-top: 50px;
  }

  /* Styling for the left column */
  .left-column {
    display: flex;
    flex-direction: column; /* Stacks elements vertically */
    justify-content: center; /* Centers content vertically */
    align-items: left; /* Centers content horizontally */
    padding: 70px; /* Adds some padding inside the column */
    text-align: left; /* Centers text horizontally */
    height: 100%; /* Ensures full height of the column is used */
  }

  /* Add some spacing between h1 and p */
  .left-column h1 {
    margin-bottom: 45px; /* Adds space between the h1 and p */
  }

  .left-column p {
    margin-top: 0;
    margin-bottom: 30px; /* Adds space below the paragraph */
  }

  /* Styling for the right column (carousel) */
  .right-column {
    max-width: 750px; /* Limit max width */
    margin-left: auto; /* Center carousel if smaller than the grid */
  }

  /* Carousel styling */
  .right-column .carousel {
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* Show 3 items at a time */
    gap: 10px; /* Space between carousel items */
  }

  /* Optional: Styling for carousel images */
  .carousel img {
    width: 150%;
    height: auto;
    object-fit: cover; /* Ensures images are well-scaled */
  }

  @media screen and (max-width: 600px) { 
    .left-column {
      padding: 30px;
    }
    .left-column p {
      font-size: 8px;
      margin-top: -20px;
      width: 200px;
    }
    .left-column h1 {
      margin-top: -30px;
    }
  }

  
</style>
