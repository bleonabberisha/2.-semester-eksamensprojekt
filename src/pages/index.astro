---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/Hero.astro";
import Carousel from "../components/Carousel.astro";

const products = [
  { title: "RIMINI BLAZER SKIRT 01", price: "595,00 kr.", image: "./gallery/ss_8.webp" },
  { title: "WORK BAG 02", price: "995,00 kr.", image: "./gallery/work-bag_9.webp" },
  { title: "SS TOP 03", price: "395,00 kr.", image: "./gallery/ss_8.webp" },
];
---

<MainLayout>
  <Hero />
  <div class="grid1_1">
    <div class="left-column">
      <h1>OUR CONCEPT</h1>
      <p>All Solrig's designs are created with consideration and sustainability in focus. Pass on this thoughtfulness with carefully selected gifts for both the home and the wardrobe. Explore our gift shop and find inspiration for thoughtful choices.</p>
    </div>

    <div class="right-column">
      <Carousel products={products} />
    </div>
  </div>

  <h2 class="citat">“We give discarded clothes new life”</h2>
  <img class="langtBillede" src="./gallery/langt_billede.webp" alt="LangtBillede" />
</MainLayout>

<style>
  /* Generel styling */
  .citat {
    margin-top: 100px;
    text-align: center;
  }

  .langtBillede {
    margin-top: 100px;
    max-width: 100%;
    height: auto;
  }

  .grid1_1 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 50px;
    align-items: start;
    margin-top: 50px;
  }

  .left-column {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding: 70px;
    text-align: left;
    height: 100%;
  }

  .left-column h1 {
    margin-bottom: 45px;
    text-align: center;
  }

  .left-column p {
    margin-top: 0;
    margin-bottom: 30px;
  }

  .right-column {
    max-width: 100%; /* Sørger for, at kolonnen ikke overskrider skærmen */
    overflow-x: auto; /* Aktiver horisontal scrolling */
    white-space: nowrap; /* Holder elementer på én linje */
    -ms-overflow-style: none; /* Skjuler scrollbar i IE */
    scrollbar-width: none; /* Skjuler scrollbar i Firefox */
  }

  .right-column::-webkit-scrollbar {
    display: none; /* Skjuler scrollbar i Chrome og Safari */
  }

  .carousel {
    display: inline-flex; /* Holder elementerne på én linje */
    gap: 10px; /* Afstand mellem billeder */
  }

  .carousel img {
    width: 250px; /* Fast bredde til billeder */
    height: auto;
    object-fit: cover; /* Sørger for korrekt tilpasning af billedet */
    border-radius: 10px; /* Valgfri: afrundede hjørner */
  }

  /* Responsiv styling for små skærme */
  @media screen and (max-width: 800px) {
    .left-column {
      padding: 0px;
      margin-left: 20px;
    }

    .left-column p {
      font-size: 15px;
      margin-top: -10px;
      width: 100%;
    }

    .left-column h1 {
      margin-top: -10px;
      text-align: left;
    }

    .right-column {
      max-width: 100%;
      margin-left: 0;
    }

    .carousel img {
      width: 150px; /* Mindre billeder på små skærme */
    }

    .grid1_1 {
      grid-template-columns: 1fr;
      gap: 30px;
      align-items: start;
    }
  }
</style>
