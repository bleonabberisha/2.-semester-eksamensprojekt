      <button>ADD TO BASKET</button>
<button id="wishlistButton" class="wishlist" data-active="false">
  <i class="fa-regular fa-heart"></i> <!-- Tomt hjerte -->
</button>

    </div>
  </div>
</div>


</>
 ) : (
