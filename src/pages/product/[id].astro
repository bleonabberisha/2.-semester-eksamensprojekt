<style>
/* GENERELLE STYLING */
body {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  overflow-x: hidden; 
}

.breadcrumb {
  font-size: 0.9rem;
  color: #555;
  white-space: nowrap;
}

.breadcrumb a {
  text-decoration: none;
  color: #8b0000;
  transition: color 0.3s ease;
}

.breadcrumb a:hover {
  color: #555;
}

.breadcrumb span {
  color: #000;
  font-weight: bold;
}

img {
  max-width: 100%;
  height: auto;
}

.thumbs .thumb {
  width: 100px;
  height: 100px;
  object-fit: cover;
  transition: transform 0.3s ease;
}

/***** DESKTOP SPECIFIK STYLING *****/
.container {
  display: grid;
  grid-template-columns: 2fr 1fr; 
  /* grid-template-rows: auto auto;  */
  gap: 20px;
  max-width: 1200px;
  margin: 40px auto;
  padding: 20px;
}

.images {
  display: grid;
  grid-template-columns: auto 2fr; 
  gap: 10px;
  align-items: start;
  grid-column: 1 / span 3; 
  grid-row: 2; 
}

.bigPic {
  grid-column: 2;
  grid-row: 1;
}

.thumbs {
  display: grid;
  grid-template-rows: repeat(3, auto); 
  grid-column: 1;
  gap: 10px;
}

.details {
  display: flex;
  flex-direction: column; 
  grid-column: 2;
  grid-row: 2;
}

.details_content {
  display: flex;
  flex-direction: column; 
  gap: 20px; 
}

.details_content h1 {
  margin: 0; 
}

.details_content .price {
  color: #333;
  margin: 0; 
}

.details_content .description {
  margin: 0; 
  color: #333; 
}

.buttons {
  display: flex;
  gap: 10px; 
  justify-content: flex-start; 
}

.buttons button,
.buttons .wishlist {
  padding: 10px 20px;
  border: none;
  cursor: pointer;
  font-size: 1rem;
  border-radius: 5px;
}

.buttons button {
  background-color: #8b0000;
  color: #fff;
}

.buttons .wishlist {
  background-color: transparent;
  color: #8b0000;
  border: 1px solid #8b0000;
}

.buttons button:hover,
.buttons .wishlist:hover {
  opacity: 0.8;
}

.wishlist {
  font-size: 1.5rem;
  color: #8b0000; 
  background: transparent;
  border: none;
  cursor: pointer;
  transition: color 0.3s ease;
}

.wishlist i {
  transition: all 0.3s ease;
}


/***** MOBIL SPECIFIK STYLING *****/
@media (max-width: 768px) {
  .container {
    grid-template-columns: 1fr;
  }

  .images {
    grid-template-columns: 1fr;
    grid-template-rows: auto auto;
  }

  .bigPic {
    grid-column: 1;
    grid-row: 1;
  }

  .thumbs {
    grid-column: 1;
    grid-row: 2;
    grid-template-columns: repeat(3, 1fr);
  }

  .details {
    grid-column: 1;
    grid-row: 3;
    margin-top: 20px;
  }

  .buttons {
    justify-content: flex-start;
  }
}
</style>

<script>
const wishlistButton = document.getElementById("wishlistButton");
const heartIcon = wishlistButton.querySelector("i");

wishlistButton.addEventListener("click", () => {
  wishlistButton.classList.toggle("active");

  if (wishlistButton.classList.contains("active")) {
    heartIcon.classList.replace("fa-regular", "fa-solid"); // Udfyldt hjerte
  } else {
    heartIcon.classList.replace("fa-solid", "fa-regular"); // Tomt hjerte
  }
});
</script>
