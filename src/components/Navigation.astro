---
import BurgerMenu from "./BurgerMenu.astro";
---

<nav>
  <!-- BurgerMenu -->
  <BurgerMenu />
  
  <!-- Logo -->
  <a href="/" class="logo-container">
    <img class="logo" src="./gallery/solrig_logo.webp" alt="logo" />
  </a>
  
  <!-- Ikoner -->
  <div class="ikoner">
    <img class="heart" src="./gallery/heart.webp" alt="Heart" />
    <img class="cart" src="./gallery/cart.webp" alt="Cart" />
  </div>
</nav>

<!-- Linje menu -->
<div class="linje_menu">
  <a href="/listeview">SHOP</a>
  <a href="/costume">COSTUME MADE</a>
  <a href="/">ABOUT SOLRIG</a>
</div>

<style>
  /* Navigation styling */
  nav {
    display: grid;
    grid-template-columns: 1fr auto 1fr; /* Tre kolonner: venstre, center (logo), højre */
    align-items: center; /* Centrer indhold lodret */
    padding: 0 20px; /* Polstring */
      border-bottom: 1px solid black; /* Tilføj en streg */

  }

  /* Logo styling */
  .logo-container {
    display:block;
    grid-column: 2; /* Placer logo-container i midten */
    justify-self: center; /* Centrer logo-container vandret */
  }

  .logo {
    max-width: 150px; /* Begræns logoets bredde */
    height: auto;
  }

  /* Ikoner styling */
  .ikoner {
    display: flex;
    gap: 20px;
    grid-column: 3; /* Placer ikoner i højre kolonne */
    justify-self: end; /* Justér til højre */
  }

  .heart,
  .cart {
    max-width: 24px;
    height: auto;
  }

  /* Linje menu styling */
  .linje_menu {
    display: grid;
    grid-template-columns: repeat(3, 1fr); 
    grid-template-rows: auto;
    align-items: center; 
    justify-items: center; 
    width: 100%;
    margin-top: 20px; 
    margin-bottom: 15px;
  }

  .linje_menu a {
    text-decoration: none; 
    color: black;
    font-weight: bold; 
    font-size: 16px; 
  }

  @media (max-width:768px){

  }
</style>
