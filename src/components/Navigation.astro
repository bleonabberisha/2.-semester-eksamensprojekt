---
import BurgerMenu from "./BurgerMenu.astro";
---

<div class="top-bar">
  <span>30 Days right of return</span> | <span>1 year free repair and alterations</span>
</div>
<nav>
  <!-- BurgerMenu -->
  <BurgerMenu />

  <!-- Søgefunktion -->
  <div class="search-wrapper">
    <img src="/gallery/searchIcon.webp" alt="Search Icon" class="search-icon" />
    <form class="search-container hidden" action="/search" method="get">
      <input id="search-box" type="text" class="search-box" name="q" placeholder="Search" disabled />
    </form>
  </div>

  <!-- Logo -->
  <a href="/" class="logo-container">
    <img class="logo" src="/gallery/solrig_logo.webp" alt="logo" />
  </a>

  <!-- Ikoner -->
  <div class="ikoner">
    <img class="heart" src="/gallery/heart.webp" alt="Heart" />
    <img class="cart" src="/gallery/cart.webp" alt="Cart" />
  </div>
</nav>

<!-- Linje menu -->
<div class="linje_menu">
  <div class="dropdown">
    <a href="/list">SHOP</a>
    <div class="dropdown-content">
      <a href="/rimini">RIMINI</a>
      <a href="/businessCasual">BUSINESS CASUAL</a>
      <a href="/takeCare">TAKE CARE</a>
    </div>
  </div>
  <a href="/costum">CUSTOM MADE</a>
  <a href="/about">ABOUT SOLRIG</a>
</div>

<style>
  /* Navigation styling */

  /* Styling for the top bar */
  .top-bar {
    text-align: center; /* Centrerer teksten */
    padding: 5px 0; /* Vertikal afstand omkring teksten */
    font-size: 12px; /* Skriftstørrelse */
    color: #333; /* Tekstfarve */
    margin-bottom: 15px;
  }

  .top-bar span {
    margin: 0 5px; /* Tilføj lidt afstand mellem spans */
  }
  nav {
    max-width: 100%; /* Sørger for, at hele navigationen ikke overskrider skærmbredden */
    box-sizing: border-box; /* Inkluder padding i bredden */
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    padding: 0 20px;
  }

  .dropdown {
    position: relative;
    font-size: 16px;
    border: none;
    outline: none;
    color: black;
    padding: 14px 16px;
    background-color: inherit;
    margin: 0;
    cursor: pointer;
  }

  .dropdown-content {
    display: none;
    position: absolute;
    left: 50%; /* Centrerer dropdown i forhold til forælder */
    transform: translateX(-50%); /* Justerer positionen tilbage med halvdelen af bredden */
    background-color: white;
    min-width: 160px;
    z-index: 1;
    border: 0.2px solid black;
    text-align: left; /* Holder teksten venstrejusteret inden i dropdown */
    padding-top: 10px;
  }

  .dropdown-content a {
    color: black;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
    text-align: left;
  }

  .dropdown-content a:hover {
    background-color: #f9f9f9;
  }

  .dropdown:hover .dropdown-content {
    display: block;
  }

  /* Logo styling */
  .logo-container {
    display: block;
    grid-column: 2;
    justify-self: center;
  }

  .logo {
    max-width: 200px;
    height: auto;
  }

  /* Ikoner styling */

  .ikoner {
    display: flex;
    gap: 20px;
    justify-content: flex-end; /* Holder ikonerne til højre */
    overflow: hidden; /* Behold denne, hvis det er nødvendigt */
  }

  .heart,
  .cart {
    width: 42px; /* Fast bredde til forældre */
    height: auto; /* Sørg for, at højden justeres efter indhold */
  }

  .heart img,
  .cart img {
    height: auto;
    object-fit: contain; /* Bevarer proportioner */
    padding: 0; /* Fjern padding, hvis det ikke er nødvendigt */
  }

  /* Linje menu styling */
  .linje_menu {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: auto;
    align-items: center;
    justify-items: center;
    width: 100%;
    margin-top: 20px;
    padding: 5px;
    border-top: 0.5px solid black; /* Tilføj en streg */
    border-bottom: 0.5px solid black; /* Tilføj en streg */
  }

  .linje_menu a {
    text-decoration: none;
    color: black;
    font-weight: 400;
    font-size: 22px;
  }

  /* Søgefunktion styling */
  .search-wrapper {
    display: flex;
    align-items: center;
    justify-content: flex-start; /* Holder søgefunktionen til venstre */
    overflow: hidden; /* Sikrer, at søgefeltet ikke går ud over containeren */
  }

  .search-icon {
    width: 24px;
    height: 24px;
    cursor: pointer;
    margin-right: 10px; /* Lidt afstand til søgefeltet */
  }

  .search-container {
    max-width: 200px; /* Begræns bredden af søgefeltet */
    overflow: hidden;
    text-overflow: ellipsis; /* Tilføjer "..." hvis indholdet bliver for bredt */
    white-space: nowrap; /* Forhindrer teksten i at bryde til næste linje */
  }

  .hidden {
    display: none; /* Skjuler søgefeltet som standard */
  }

  .search-box {
    border: none;
    outline: none;
    font-size: 14px;
    padding: 5px;
    width: 120px;
    background: transparent;
    cursor: not-allowed; /* Indikerer, at feltet ikke er aktivt */
  }

  @media (max-width: 768px) {
    .top-bar {
      font-size: 9.5px;
    }

    .linje_menu {
      display: none !important;
    }

    .search-wrapper {
      display: none !important; /* Skjuler hele søgefunktionen på mobil */
    }

    .logo {
      max-width: 125px;
      height: auto;
    }

    /* Ikoner styling */

    .ikoner {
      gap: 12px;
    }

    .heart,
    .cart {
      width: 30px; /* Fast bredde til forældre */
    }
</style>

<script>
  document.querySelector(".search-icon").addEventListener("click", () => {
    const searchContainer = document.querySelector(".search-container");
    searchContainer.classList.toggle("hidden"); // Viser/skjuler søgefeltet
  });
</script>
