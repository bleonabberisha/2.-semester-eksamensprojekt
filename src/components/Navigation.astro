---
import BurgerMenu from "./BurgerMenu.astro";
---

<nav>
  <!-- BurgerMenu -->
  <BurgerMenu />

  <!-- Søgefunktion -->
  <div class="search-wrapper">
    <img src="/gallery/searchIcon.webp" alt="Search Icon" class="search-icon" />
    <form class="search-container hidden" action="/search" method="get">
      <input id="search-box" type="text" class="search-box" name="q" placeholder="Search" disabled />
    </form>
  </div>

  <!-- Logo -->
  <a href="/" class="logo-container">
    <img class="logo" src="/gallery/solrig_logo.webp" alt="logo" />
  </a>

  <!-- Ikoner -->
  <div class="ikoner">
    <img class="heart" src="/gallery/heart.webp" alt="Heart" />
    <img class="cart" src="/gallery/cart.webp" alt="Cart" />
  </div>
</nav>

<!-- Linje menu -->
<div class="linje_menu">
  <div class="dropdown">
    <a href="/list">SHOP</a>
    <div class="dropdown-content">
      <a href="/rimini">RIMINI</a>
      <a href="/businessCasual">BUSINESS CASUAL</a>
      <a href="/takeCare">TAKE CARE</a>
    </div>
  </div>
  <a href="/costum">COSTUM MADE</a>
  <a href="/about">ABOUT SOLRIG</a>
</div>

<style>
  /* Navigation styling */
  nav {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    padding: 0 20px;
    border-bottom: 0.5px solid black;
  }

  .dropdown {
    position: relative;
    font-size: 16px;
    border: none;
    outline: none;
    color: black;
    padding: 14px 16px;
    background-color: inherit;
    margin: 0;
    cursor: pointer;
  }

  .dropdown-content {
    display: none;
    position: absolute;
    left: 50%; /* Centrerer dropdown i forhold til forælder */
    transform: translateX(-50%); /* Justerer positionen tilbage med halvdelen af bredden */
    background-color: white;
    min-width: 160px;
    z-index: 1;
    border: 0.2px solid black;
    text-align: left; /* Holder teksten venstrejusteret inden i dropdown */
    padding-top: 10px;
  }

  .dropdown-content a {
    color: black;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
    text-align: left;
  }

  .dropdown-content a:hover {
    background-color: #f9f9f9;
  }

  .dropdown:hover .dropdown-content {
    display: block;
  }

  /* Logo styling */
  .logo-container {
    display: block;
    grid-column: 2;
    justify-self: center;
  }

  .logo {
    max-width: 200px;
    height: auto;
  }

  /* Ikoner styling */
  .ikoner {
    display: flex;
    gap: 20px;
    grid-column: 3; /* Placer ikoner i højre kolonne */
    justify-self: end; /* Justér til højre */
  }

  .heart,
  .cart {
    max-width: 24px;
    height: auto;
  }

  /* Linje menu styling */
  .linje_menu {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: auto;
    align-items: center;
    justify-items: center;
    width: 100%;
    margin-top: 20px;
    padding-bottom: 15px;
    border-bottom: 0.5px solid black; /* Tilføj en streg */
  }

  .linje_menu a {
    text-decoration: none;
    color: black;
    font-weight: bold;
    font-size: 18px;
  }

  /* Søgefunktion styling */
  .search-wrapper {
    display: flex;
    align-items: center;
    position: relative;
    justify-content: flex-start; /* Placerer ikonet i venstre side */
  }

  .search-icon {
    width: 24px;
    height: 24px;
    cursor: pointer;
    margin-right: 10px; /* Lidt afstand til søgefeltet */
  }

  .search-container {
    display: flex;
    align-items: center;
    position: absolute;
    left: 40px; /* Justér afstanden fra venstre */
    top: 0;
    background-color: #fff;
    border: 1px solid #ccc;
    border-radius: 20px;
    padding: 5px 10px;
    transition: all 0.3s ease;
  }

  .hidden {
    display: none; /* Skjuler søgefeltet som standard */
  }

  .search-box {
    border: none;
    outline: none;
    font-size: 14px;
    padding: 5px;
    width: 120px;
    background: transparent;
    cursor: not-allowed; /* Indikerer, at feltet ikke er aktivt */
  }

  @media (max-width: 768px) {
    .linje_menu {
      display: none !important;
    }

    .search-container {
      display: none;
    }
  }
</style>

<script>
  document.querySelector(".search-icon").addEventListener("click", () => {
    const searchContainer = document.querySelector(".search-container");
    searchContainer.classList.toggle("hidden"); // Viser/skjuler søgefeltet
  });
</script>
