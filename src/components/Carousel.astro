---
import Card from "../components/Card.astro";

const { products } = Astro.props;
---

<div class="carousel-container">
  <div class="carousel-track-wrapper">
    <div class="carousel-track">
      {
        products.map((product) => (
          <div class="carousel-item">
            <Card {...product} />
          </div>
        ))
      }

      {
        products.map((product) => (
          <div class="carousel-item">
            <Card {...product} />
          </div>
        ))
      }
    </div>
  </div>
</div>

<style>
 @media screen and (min-width: 600px) {
  .carousel-container {
    position: relative;
    overflow: hidden;
    width: 100%;
  }

  .carousel-track-wrapper {
    width: 100%;
    overflow: hidden;
  }


  .carousel-track {
    display: flex;
    gap: 5px;
    animation: scroll 20s linear infinite;
    width: max-content; 
  }
  

  .carousel-item {
    flex-shrink: 0;
    width: 270px; 
    height: 400px; 
    overflow: hidden;
    display: flex;
    flex-direction: column; /
  }
  .carousel-item img {
    width: 150%; 
    height: 100%; 
    object-fit: cover; 
  }

 
  .carousel-item .card-text {
    text-align: center;
    padding: 10px;
    background: rgba(255, 255, 255, 0.8); 
    width: 100%;
    box-sizing: border-box;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  } }

  @media screen and (max-width: 600px) { 

.carousel-container {
    position: relative;
    overflow: hidden;
    width: 100%;
  }

  .carousel-track-wrapper {
    width: 100%;
    overflow: hidden;
  }


  .carousel-track {
    display: flex;
    gap: 5px;
    animation: scroll 20s linear infinite;
    width: max-content; 
  }

  .carousel-item {
    flex-shrink: 0;
    width: 100px; 
    height: 100px; 
    overflow: hidden;
    display: flex;
    
  }

 
  .carousel-item img {
    width: 100%; 
    height: 100%; 
    object-fit: cover; 
  }
  
  .carousel-item .card-text {
    text-align: center;
    padding: 10px;
    background: rgba(255, 255, 255, 0.8); 
    width: 100%;
    box-sizing: border-box;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-30%);
    }
  }

  
  @media (max-width: 768px) {
    .carousel-item {
      width: 150px; 
      height: 200px;
    .carousel-track {
      gap: 5px; 
    }

    .carousel-item .card-text {
      font-size: 14px; 
      padding: 8px; 
    }
  }

  @media (max-width: 480px) {
    .carousel-item {
      width: 120px; 
      height: 160px; 
    }

    .carousel-track {
      gap: 2px; 
    }

    .carousel-item .card-text {
      font-size: 12px; 
      padding: 6px; 
    }
  }
 } 
}

</style>
